{% set url = path('ads_show',{'slug' : ad.slug}) %}
<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres,<b> {{ad.price}}&euro; / nuit</b> <br>
            <small>Pas encore not√©</small>
            <a href="{{ url }}">
                <img src="{{ ad.coverImage }}" alt="image de l'appartement" height="200px" width="100%" style="display: block;">
            </a>    
            <div class="card-body">
            <a href="{{ url }}">
                <h4 class="card-title">
                    {{ad.title}}
                </h4>
            </a>
                <p class="card-text">
                    {{ad.introduction}}
                </p>
                <a href="{{ url }}" class="btn btn-secondary lg">En savoir plus!</a>
                 {% if app.user and app.user == ad.author %}
                    <a href="{{ path('ads_edit',{'slug' : ad.slug}) }}" class="btn btn-primary">Modifier l'annonce</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>